                Command="{Binding TallyCommand}"
                FontSize="Small"
                />
            <Label x:Name="ll" 
               Text="You are..." 
                   IsVisible="{Binding Picture}"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" 
               FontSize="Medium" />

            <Image Source="{Binding PhotoSrc}"
               HeightRequest="600"
               IsVisible="{Binding Picture}"
               />
            <Label x:Name="character" 
               Text="{Binding Character}" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" 
               FontSize="Large" />
