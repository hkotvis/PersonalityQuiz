            <Label Text="Which character from  THE FLASH  are you?" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" FontSize="Large" FontAttributes="Bold"/>
            <Label Text="Name"/>
            <Entry Text="{Binding Name}" Placeholder="Full Name" FontSize="Small"/>
            <Label Text="Age"/>
            <Entry Text="{Binding Age}" Placeholder="Age" FontSize="Small"/>

            <Label x:Name="question" 
               Text="{Binding Question}" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" 
               FontSize="Small" />

            <Button x:Name="chewyButton"
                IsVisible="{Binding Visible}"
                Text="{Binding kAnswer}"
                Command="{Binding TallyCommand}"
                FontSize="Small"
                />
            <Button x:Name="skywalkerButton"
                IsVisible="{Binding Visible}"
                Text="{Binding cAnswer}"
                Command="{Binding TallyCommand}"
                FontSize="Small"
                />
